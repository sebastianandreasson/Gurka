{
  "containerDefinitions": [
    {
      "name": "gurkapi",
      "image": "gurka/gurkapi:latest",
      "portMappings": [
        {
          "containerPort": 4000,
          "hostPort": 4000
        }
      ],
      "secrets": [],
      "environment": [
        {
          "name": "TITLE",
          "value": "Gurkapi"
        },
        {
          "name": "AWS_REGION",
          "value": "eu-north-1"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "awslogs-gurkapi-app",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "awslogs-gurkapi"
        }
      }
    }
  ],
  "executionRoleArn": "ecsTaskExecutionRole",
  "family": "gurkapi",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "1024"
}